<%- include('partials/_header.ejs') %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5 offset-md-3 card">
                <div class="card-body">
                    <form action="/crud/update/<%= data.id %>" method="post">
                    <div class="form-group">
                        <input type="text" name="restaurantName" value="<%= data.restaurantName %>" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" name="city" value="<%= data.city %>" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="address" value="<%= data.address %>" class="form-control">
                    </div>
                    <div class="form-group">
                        <select name="rating" class="form-control">
                            <option selected ><%= data.rating %></option>
                            <option>*</option>
                            <option>**</option>
                            <option>***</option>
                            <option>****</option>
                            <option>*****</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <textarea name="review" value="<%= data.review %>" placeholder="" class="md-textarea form-control" rows="3"><%= data.review %></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Update Restaurant</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>